{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": [
    "assets/**/*",
    "**/*.d.ts",
    "types/**/*.d.ts",
    "storybook/**/*",
    "src/**/*",
    "native.d.ts",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
