{
  "extends": "./tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2020",
    "module": "ES2020",
    "noEmit": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": [
    "types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.stories.ts",
    "**/__stories__/**/*",
    "**/__tests__/**/*",
    "node_modules"
  ]
}
