{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "api/*": [
        "api/*"
      ],
      "assets/*": [
        "src/assets/*"
      ]
    }
  },
  "include": [
    "gulpfile.ts",
    "__tests__/**/*",
    "types/**/*.d.ts",
    "next-env.d.ts",
    "api/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
