{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "api/*": [
        "api/*"
      ],
      "assets/*": [
        "src/assets/*"
      ]
    }
  },
  "include": [
    "gulpfile.ts",
    "__tests__/**/*",
    "next-env.d.ts",
    "./api/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
